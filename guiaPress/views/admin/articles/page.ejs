<body>
    <div class="container">
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/article/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
          <div class="row">
            <div class="col col-12">
                    <a href="/articles/page/<%= result.page - 1 %>" style="float: left;">Prev << </a>
                <% if (result.next) {%>
                    <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next >></a>
                <% } %>
            </div>
            <hr>
        </div>
        <hr>
    </div>
</body>

