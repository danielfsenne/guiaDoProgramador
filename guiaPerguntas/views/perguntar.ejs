<%- include('partials/header') %>

<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <div class="card" id="formulario">
      <div class="card-header">
        <h3>Realizar Pergunta</h3>
      </div>
      <div class="card-body">
        <form action="/salvarpergunta" method="POST">
          <label for="titulo">Título</label>
          <input type="text" id="titulo" name="titulo" placeholder="Título" class="form-control">

          <br>

          <label for="descricao">Descrição</label>
          <textarea id="descricao" name="descricao" placeholder="Descreva sua Pergunta" class="form-control"></textarea>

          <br>

          <button type="submit" class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>

<%- include('partials/footer') %>
